<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - FAQsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
</head>
<body>
    <header class="bg-info text-center p-3 text-white">
        <h1>Frequently Asked Questions</h1>
    </header>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index/">All FAQs</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Topic/linux">Linux</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Topic/fedora">Fedora</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Topic/ubuntu">Ubuntu</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Topic/archlinux">Arch Linux</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
</body>
</html>
